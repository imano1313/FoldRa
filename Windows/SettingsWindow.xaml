<Window x:Class="FoldRa.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FoldRa Settings" 
        Icon="/Resources/icon.png"
        Width="420" Height="560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent" ResizeMode="NoResize">
    
    <Border CornerRadius="12" Background="#1E1E1E" BorderBrush="#3A3A3A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0" Background="#252525" 
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid>
                    <TextBlock Text="âš™ï¸ Settings" Foreground="White" FontSize="14" FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe UI"/>
                    
                    <Button x:Name="CloseButton" Content="âœ•" 
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="36" Height="36" Margin="0,0,8,0"
                            Background="Transparent" Foreground="#808080" 
                            BorderThickness="0" FontSize="14" Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,16">
                <StackPanel>
                    
                    <!-- Language Section -->
                    <TextBlock x:Name="LanguageHeader" Text="ðŸŒ Language" Foreground="White" 
                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,12" FontFamily="Segoe UI"/>
                    
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="LanguageLabel" Text="Interface Language" Foreground="#B0B0B0" 
                                       VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            <ComboBox x:Name="LanguageCombo" Grid.Column="1" Width="140" 
                                      SelectionChanged="LanguageCombo_SelectionChanged">
                                <ComboBoxItem Content="English" Tag="en"/>
                                <ComboBoxItem Content="TÃ¼rkÃ§e" Tag="tr"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- Theme Section -->
                    <TextBlock x:Name="ThemeHeader" Text="ðŸŽ¨ Theme" Foreground="White" 
                               FontSize="13" FontWeight="SemiBold" Margin="0,24,0,12" FontFamily="Segoe UI"/>
                    
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ThemeLabel" Text="Color Theme" Foreground="#B0B0B0" 
                                       VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            <ComboBox x:Name="ThemeCombo" Grid.Column="1" Width="140"
                                      SelectionChanged="ThemeCombo_SelectionChanged">
                                <ComboBoxItem x:Name="ThemeDark" Content="ðŸŒ™ Dark" Tag="dark"/>
                                <ComboBoxItem x:Name="ThemeLight" Content="â˜€ï¸ Light" Tag="light"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- Widget Defaults Section -->
                    <TextBlock x:Name="DefaultsHeader" Text="ðŸ“Š Widget Defaults" Foreground="White" 
                               FontSize="13" FontWeight="SemiBold" Margin="0,24,0,12" FontFamily="Segoe UI"/>
                    
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="GridLabel" Text="Default Grid Columns" Foreground="#B0B0B0" 
                                       VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            <ComboBox x:Name="GridColumnsCombo" Grid.Column="1" Width="80"
                                      SelectionChanged="GridColumnsCombo_SelectionChanged">
                                <ComboBoxItem Content="2" Tag="2"/>
                                <ComboBoxItem Content="3" Tag="3"/>
                                <ComboBoxItem Content="4" Tag="4"/>
                                <ComboBoxItem Content="5" Tag="5"/>
                                <ComboBoxItem Content="6" Tag="6"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- Startup Section -->
                    <TextBlock x:Name="StartupHeader" Text="ðŸš€ Startup" Foreground="White" 
                               FontSize="13" FontWeight="SemiBold" Margin="0,24,0,12" FontFamily="Segoe UI"/>
                    
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="StartupLabel" Text="Start with Windows" Foreground="#B0B0B0" FontFamily="Segoe UI"/>
                                <TextBlock x:Name="StartupNote" Text="" Foreground="#606060" 
                                           FontSize="10" Margin="0,2,0,0" FontFamily="Segoe UI"/>
                            </StackPanel>
                            <CheckBox x:Name="StartupCheckbox" Grid.Column="1" VerticalAlignment="Center"
                                      IsEnabled="True" Checked="StartupCheckbox_Changed" Unchecked="StartupCheckbox_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Icon Style Section -->
                    <TextBlock x:Name="IconStyleHeader" Text="ðŸ“ Icon Style" Foreground="White" 
                               FontSize="13" FontWeight="SemiBold" Margin="0,24,0,12" FontFamily="Segoe UI"/>
                    
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="IconStyleLabel" Text="Folder Icon Style" Foreground="#B0B0B0" 
                                       VerticalAlignment="Center" FontFamily="Segoe UI"/>
                            <ComboBox x:Name="IconStyleCombo" Grid.Column="1" Width="120"
                                      SelectionChanged="IconStyleCombo_SelectionChanged">
                                <ComboBoxItem Content="ðŸ“‚ Classic" Tag="classic"/>
                                <ComboBoxItem Content="ðŸ—‚ï¸ Modern" Tag="modern"/>
                                <ComboBoxItem Content="ðŸ“ Minimal" Tag="minimal"/>
                                <ComboBoxItem Content="ðŸŸ¦ Rounded" Tag="rounded"/>
                                <ComboBoxItem Content="â–¬ Flat" Tag="flat"/>
                                <ComboBoxItem Content="ðŸŒˆ Gradient" Tag="gradient"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                    
                    <!-- About Section -->
                    <TextBlock Text="â„¹ï¸ About" Foreground="White" 
                               FontSize="13" FontWeight="SemiBold" Margin="0,24,0,12" FontFamily="Segoe UI"/>
                    
                    <Border Background="#2A2A2A" CornerRadius="8" Padding="16,12">
                        <StackPanel>
                            <TextBlock Text="FoldRa" Foreground="White" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI"/>
                            <TextBlock Text="Desktop Folder Widgets" Foreground="#808080" FontSize="11" Margin="0,2,0,0" FontFamily="Segoe UI"/>
                            <TextBlock x:Name="VersionText" Text="Version 1.0.0" Foreground="#606060" FontSize="10" Margin="0,8,0,0" FontFamily="Segoe UI"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" CornerRadius="0,0,12,12" Background="#252525">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0">
                    <Button x:Name="SaveButton" Content="Save" Width="90" Height="32" Margin="0,0,8,0"
                            Background="#3B82F6" Foreground="White" BorderThickness="0" 
                            FontWeight="SemiBold" Cursor="Hand" Click="SaveButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="CancelButton" Content="Cancel" Width="90" Height="32"
                            Background="#3A3A3A" Foreground="#B0B0B0" BorderThickness="0" 
                            FontWeight="SemiBold" Cursor="Hand" Click="CancelButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#4A4A4A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


